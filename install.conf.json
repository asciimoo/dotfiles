[
    {
        "clean": ["~"]
    },
    {
        "shell": [
            ["mkdir -p ~/.config ~/.i3", "Creating config directories"],
            ["mkdir -p ~/bin", "Creating scripts directories"]
        ]
    },
    {
        "link": {
            "~/.tmux.conf": "tmux.conf",
            "~/.emacs": "emacs.el",
            "~/.Xdefaults": "Xdefaults",
            "~/.xinitrc": "xinitrc",
            "~/.conkyrc": "conkyrc",
            "~/.vimrc": "vimrc",
            "~/.vim": "vim/",
            "~/.zshrc": "zshrc",
            "~/.pylintrc": "pylintrc",
            "~/.zsh_theme": "zsh_theme",
            "~/.oh-my-zsh": "oh-my-zsh",
            "~/.pentadactylrc": "pentadactylrc",
            "~/.config/i3": "i3/",
            "~/.config/i3status": "i3status/",
            "~/.config/matplotlib": "matplotlib/",
            "~/bin/log": "bin/log",
            "~/bin/gitlog": "bin/gitlog",
            "~/bin/clock": "bin/clock",
            "~/bin/mp42mp3": "bin/mp42mp3",
            "~/bin/pip-upgrade": "bin/pip-upgrade",
            "~/bin/screensaver": "bin/screensaver"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing/updating submodules"]
        ]
    }
]
